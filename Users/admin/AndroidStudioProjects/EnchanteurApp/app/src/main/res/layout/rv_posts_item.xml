<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/animal_desc"
        android:background="@drawable/animal_desc_layout"
        android:layout_width="380dp"
        android:layout_height="200dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="15dp"
        android:elevation="5dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/animal_img"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:elevation="5dp"
            android:background="@drawable/animal_img_layout"/>

    <RelativeLayout
        android:layout_toRightOf="@id/animal_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/animal_story"
            android:layout_width="150dp"
            android:layout_marginTop="70dp"
            android:fontFamily="sans-serif-light"
            android:layout_marginLeft="15dp"
            android:layout_height="60dp"
            android:textSize="10sp"
            android:textColor="#48007B"
            android:text="I found this tiny kitten while I was walking down the street. She's so tiny and hungry. Hope someone enchant this little one. " />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/animal_loc"
            app:backgroundTint="#ECE8F9"
            android:layout_marginLeft="25dp"
            android:layout_below="@id/animal_story"
            android:layout_width="40dp"
            app:icon="@drawable/ic_location"
            app:iconTint="#48007B"
            app:iconSize="30dp"
            app:iconGravity="textEnd"
            app:iconPadding="0dp"
            app:cornerRadius="12dp"
            android:layout_height="50dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/animal_donate"
            android:layout_marginLeft="5dp"
            android:layout_below="@id/animal_story"
            android:layout_toRightOf="@id/animal_loc"
            android:layout_width="40dp"
            app:cornerRadius="12dp"
            app:icon="@drawable/ic_donate"
            app:iconPadding="0dp"
            app:iconSize="20dp"
            app:iconGravity="textEnd"
            app:iconTint="#48007B"
            app:backgroundTint="#E9D8F2"
            android:layout_height="50dp"/>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/animal_liked"
            android:layout_below="@id/animal_story"
            android:layout_width="40dp"
            android:layout_marginLeft="5dp"
            app:backgroundTint="#ECE8F9"
            app:cornerRadius="12dp"
            android:layout_height="50dp"
            app:iconSize="20dp"
            app:iconTint="#48007B"
            app:iconPadding="0dp"
            app:iconGravity="textEnd"
            app:icon="@drawable/ic_heart"
            android:layout_toRightOf="@id/animal_donate"/>


    </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>